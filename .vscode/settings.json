{
  // ============================================
  // üîí PRIVACY & SECURITY SETTINGS
  // ============================================

  // Disable ALL telemetry - No data sharing
  "telemetry.telemetryLevel": "off",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  // GitHub Copilot Privacy Settings
  "github.copilot.advanced": {
    "debug.overrideEngine": "disabled",
    "debug.testOverrideProxyUrl": "",
    "debug.overrideProxyUrl": ""
  },

  // Disable Copilot for sensitive file types
  "github.copilot.enable": {
    "*": true,
    "env": false,
    "yaml": false,
    ".env": false,
    ".env.local": false,
    ".env.development.local": false,
    ".env.test.local": false,
    ".env.production.local": false,
    "plaintext": false,
    "secrets": false
  },

  // ============================================
  // üìÅ FILE EXCLUSIONS
  // ============================================

  // Exclude sensitive files from search and file explorer
  "files.exclude": {
    "**/.env": true,
    "**/.env.local": true,
    "**/.env.*.local": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/secrets": true,
    "**/*.key": true,
    "**/*.pem": true
  },

  // Exclude from search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.env": true,
    "**/.env.local": true
  },

  // ============================================
  // üé® EDITOR SETTINGS (Optional)
  // ============================================

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.tabSize": 2,
  "editor.wordWrap": "on",

  // ============================================
  // üöÄ RECOMMENDATIONS
  // ============================================

  "extensions.ignoreRecommendations": false,

  // Suggested extensions for this project
  "recommendations": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "bradlc.vscode-tailwindcss"
  ]
}
